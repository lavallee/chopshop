#!/bin/bash
#
# chopshop-load - Load a chopshop plan into beads
#
# Usage: chopshop-load <plan.jsonl>
#
# This script imports a chopshop-generated JSONL file into the beads
# task management system. It handles:
# - Validation of the input file
# - Import via bd import
# - Sync to ensure JSONL is up to date
# - Summary of what was loaded
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

usage() {
    echo "Usage: chopshop-load <plan.jsonl>"
    echo ""
    echo "Load a chopshop plan into beads."
    echo ""
    echo "Arguments:"
    echo "  plan.jsonl    Path to the chopshop-generated JSONL file"
    echo ""
    echo "Examples:"
    echo "  chopshop-load .chopshop/sessions/myproject-20250109-143022/plan.jsonl"
    echo "  chopshop-load plan.jsonl"
    exit 1
}

error() {
    echo -e "${RED}Error:${NC} $1" >&2
    exit 1
}

info() {
    echo -e "${GREEN}✓${NC} $1"
}

warn() {
    echo -e "${YELLOW}!${NC} $1"
}

# Check arguments
if [ $# -lt 1 ]; then
    usage
fi

JSONL_FILE="$1"

# Validate file exists
if [ ! -f "$JSONL_FILE" ]; then
    error "File not found: $JSONL_FILE"
fi

# Validate it looks like JSONL
if ! head -1 "$JSONL_FILE" | jq -e . >/dev/null 2>&1; then
    error "File does not appear to be valid JSONL: $JSONL_FILE"
fi

# Check bd is installed
if ! command -v bd &> /dev/null; then
    error "Beads CLI (bd) not found. Install from: https://github.com/steveyegge/beads"
fi

# Count what we're loading
TOTAL=$(wc -l < "$JSONL_FILE" | tr -d ' ')
EPICS=$(grep -c '"issue_type":"epic"' "$JSONL_FILE" 2>/dev/null || echo 0)
TASKS=$((TOTAL - EPICS))

echo "Loading chopshop plan..."
echo "  File: $JSONL_FILE"
echo "  Epics: $EPICS"
echo "  Tasks: $TASKS"
echo ""

# Initialize beads if needed
if [ ! -d ".beads" ]; then
    warn "No .beads directory found, initializing..."
    bd init
fi

# Import the JSONL
echo "Importing..."
if bd import -i "$JSONL_FILE" 2>&1; then
    info "Import complete"
else
    error "Import failed"
fi

# Sync to update JSONL
echo "Syncing..."
if bd sync 2>&1 | grep -v "^→\|^✓" || true; then
    info "Sync complete"
fi

# Summary
echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
info "Plan loaded successfully!"
echo ""
echo "Quick commands:"
echo "  bd ready              # See available work"
echo "  bd list --type epic   # See all epics"
echo "  bd show <id>          # View task details"
echo ""

# Show ready tasks
READY_COUNT=$(bd ready 2>/dev/null | wc -l | tr -d ' ')
if [ "$READY_COUNT" -gt 0 ]; then
    echo "Ready to start ($READY_COUNT tasks):"
    bd ready 2>/dev/null | head -5
    if [ "$READY_COUNT" -gt 5 ]; then
        echo "  ... and $((READY_COUNT - 5)) more"
    fi
fi
